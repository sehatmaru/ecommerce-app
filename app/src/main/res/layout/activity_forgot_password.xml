<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorf9f9f9">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/color222222"
        android:fontFamily="@font/metropolis_bold"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="Forgot Password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="87dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_regular"
            android:textColor="@color/color222222"
            android:lineSpacingExtra="6sp"
            android:text="Please, enter your email address. You will receive a link to create a new password via email."
            android:layout_marginBottom="16dp"/>

        <com.app.uicustom.view.InputDataWithLabelViewKG
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintInputGeneral="@string/email"
            app:formatTypeGeneral="email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="Not a valid email address. Should be your@email.com"
            android:textColor="@color/colorf01f0e"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:paddingTop="28dp">

            <TextView
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/metropolis_regular"
                android:textColor="@color/colorffffff"
                android:text="SEND"
                android:lineSpacingExtra="6sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textAlignment="center"
                android:background="@drawable/bg_rad25_colordb3022"
                android:enabled="false"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
