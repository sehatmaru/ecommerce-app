<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@color/colorf9f9f9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:fontFamily="@font/metropolis_bold"
        android:textColor="@color/color222222"
        android:text="My Bag"
        android:paddingTop="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.uicustom.view.ListItemBagViewKG
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                app:itemCat="first"
                app:itemSize="xl"
                app:itemColor="red"/>

            <com.app.uicustom.view.ListItemBagViewKG
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                app:itemCat="second"
                app:itemSize="l"
                app:itemColor="black"/>

            <com.app.uicustom.view.ListItemBagViewKG
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                app:itemCat="third"
                app:itemSize="s"
                app:itemColor="green"/>

        </LinearLayout>

    </ScrollView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Enter your promo code"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableRight="@drawable/arrow_forward"
        android:background="@drawable/bg_rad8_colorffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_medium"
            android:textColor="@color/color9b9b9b"
            android:textSize="14sp"
            android:text="Total amount:" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/color222222"
            android:textSize="18sp"
            android:textAlignment="viewEnd"
            android:text="124$"
            android:gravity="end" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:paddingTop="21dp"
        android:paddingBottom="22dp">

        <TextView
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_regular"
            android:textColor="@color/colorffffff"
            android:text="CHECK OUT"
            android:lineSpacingExtra="6sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textAlignment="center"
            android:background="@drawable/bg_rad25_colordb3022"
            android:enabled="false"/>

    </LinearLayout>

</LinearLayout>